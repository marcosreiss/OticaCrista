@inherits CreateBrandModalPage

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField 
                @bind-Value="input.Name"
                T="string" 
                Label="Nome da Marca" 
                Required="true" 
                RequiredError="Insira o Nome da Marca" />
            @if (IsBusy)
            {
                <MudProgressCircular Indeterminate />
            }
            else
            {
                <MudButton Color="Color.Success" OnClick="OnCreateClickedAsync">Cadastrar</MudButton>
            }
        </MudForm>
    </DialogContent>
</MudDialog>



