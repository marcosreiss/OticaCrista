@page "/brands"
@inherits HomeBrandsPage

<PageTitle>Marcas</PageTitle>

<Modal Title="Criar Marca" IsVisible="IsModalVisible">
    <CreateBrandComponent />
</Modal>

@if(Brands.Count == 0)
{
    <p>Carregando...</p>
}
else
{

    <button @onclick="() => IsModalVisible = true" 
            class="py-2 px-5 bg-black rounded-md hover:bg-gray-900 transition duration-500">
        Cadastrar Nova Marca
    </button>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Brands)
            {
                <tr>
                    <td>@brand.Id</td>
                    <td>@brand.Name</td>
                </tr>
            }
        </tbody>
    </table>
}


